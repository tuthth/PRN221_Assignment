<Window x:Class="PRN221_Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_Assignment"
        mc:Ignorable="d"
        MinHeight="400" MinWidth="700"
        MaxHeight="600" MaxWidth="1000"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbTitle" Content="CAR RENTING MANAGEMENT SYSTEM" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="lbUsername" Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,170,0,0"/>
        <Label x:Name="lbPassword" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,220,0,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="130,170,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="130,220,0,0"/>
        <Button x:Name="btnSignIn" Content="SIGN IN" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,270,0,0" Click="btnSignIn_Click"/>
    </Grid>
</Window>
