<Window x:Class="PRN221_Assignment1_WPF.RentingManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_Assignment1_WPF"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="RentingManage" Height="461" Width="800">
    <Grid>
        <DataGrid x:Name="dgvTransactions" HorizontalAlignment="Left" Height="228" Margin="0,180,0,0" VerticalAlignment="Top" Width="400" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <DataGrid x:Name="dgvDetails" HorizontalAlignment="Left" Height="228" Margin="405,180,0,0" VerticalAlignment="Top" Width="395" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="98,52,0,0" VerticalAlignment="Top" Height="90" Width="154" Click="btnAdd_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="538,52,0,0" VerticalAlignment="Top" Height="90" Width="154" Click="btnDelete_Click"/>

    </Grid>
</Window>
