@page
@model PRN221_Assignment_Razor.Pages.CreateRentingModel
@{
}
<h2>Add Renting Transaction</h2>

<form method="post">
    <div class="form-group">
        <label for="CarId">Car</label>
        <select asp-for="CarId" class="form-control">
            @foreach (var car in Model.Cars)
            {
                <option value="@car.CarId">@car.CarId</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control">
            @foreach (var customer in Model.Customers)
            {
                <option value="@customer.CustomerId">@customer.CustomerId</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <button type="submit" asp-page-handler="AddDetail">Add Detail</button>
</form>

<table class="table">
    @foreach (var detail in Model.rentingDetails)
    {
        <tr>
            <td>@detail.CarId</td>
            <td>@detail.StartDate</td>
            <td>@detail.EndDate</td>
            <td>@detail.Price</td>
        </tr>
    }
</table>
