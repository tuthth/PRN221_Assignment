@page
@model PRN221_Assignment_Razor.Pages.CustomerManagerModel
@{
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer Manager</title>
</head>
<body>
    <h1>Customer Manager</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }

    <form method="post" class="container mt-4">
        <div class="form-group">
            <label for="SelectedCustomerId">Select Customer:</label>
            <select asp-for="SelectedCustomerId" class="form-control" asp-items="@Model.CustomerIds">
                <option value="0">-- Select a customer --</option>
            </select>
        </div>

        <div class="form-group">
            <label for="CustomerName">Name:</label>
            <input asp-for="CustomerName" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Telephone">Telephone:</label>
            <input asp-for="Telephone" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="CustomerBirthday">Birthday:</label>
            <input asp-for="CustomerBirthday" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label for="CustomerStatus">Status:</label>
            <input asp-for="CustomerStatus" class="form-control" min="0" max="1" />
        </div>

        <div class="form-group">
            <button type="submit" name="btnUpdate" class="btn btn-primary">Update</button>
            <button type="button" name="btnCreate" class="btn btn-success" onclick="location.href='@Url.Page("/CreateCustomer")'">Create</button>
            <button type="submit" name="btnDelete" class="btn btn-danger">Delete</button>
        </div>
    </form>



    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.Telephone</td>
                    <td>@customer.Email</td>
                    <td>@customer.CustomerBirthday.ToString()</td>
                    <td>@customer.CustomerStatus</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
